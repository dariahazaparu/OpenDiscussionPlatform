@model OpenDiscussion.Models.Comment

@{
    ViewBag.Title = "Edit comment";
}

<div>
    <div style="text-align:center;">
        <div class="container">
            <br />
            <h1 style="color:#303952;">
                Edit your comment
            </h1>
            <hr style="border:2px #e15f41 solid;" />
            <form method="post" action="/Comments/Edit/@Model.CommentId">
                @Html.HttpMethodOverride(HttpVerbs.Put)
                @Html.HiddenFor(m => m.CommentId)

                <h1 style="color:#303952;">
                    @Html.Label("CommContent", "Comment")
                </h1>
                <div style="text-align:initial; margin-left:30%; margin-right:30%;">
                    @Html.Editor("CommContent", new { htmlAttributes = new { @class = "form-control form-content" } })
                </div>
                @Html.ValidationMessage("CommContent", null, new { @class = "text-danger" })
                <br />
                <br />
                @Html.HiddenFor(m => m.Date)

                <button type="submit" class="button" style="background-color:#e15f41;">
                    <span style="color:white;">Submit</span>
                </button>
            </form>
        </div>
    </div>
</div>


