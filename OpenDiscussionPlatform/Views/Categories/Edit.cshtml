@model OpenDiscussion.Models.Category

@{
    ViewBag.Title = "Edit country";
}

<div style="text-align:center;">
    <div class="container">

        <h1 style="color:#303952;">
            Edit country
        </h1>
        <hr style="border:2px #e15f41 solid;" />
        @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <h1>
                    @Html.Label("CategoryName", "Country name")
                </h1>

                <div class="div-title">
                    @Html.TextBox("CategoryName", null, new { @class = "form-control form-title" })
                </div>

                @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
            </div>
            @*<br />
            <div class="form-group">
                <label>Change the picture</label>
                <input type="file" name="updoadedFile" />
            </div>*@
            <br />
            <button type="submit" class="button" style="width:250px; background-color:#e15f41">Submit</button>
        }

        <form method="post" action="/Categories/Edit/@Model.CategoryId">
            @Html.HttpMethodOverride(HttpVerbs.Put)

            @Html.HiddenFor(m => m.CategoryId)

            <h1 style="color:#303952;">
                @Html.Label("CategoryName", "Country name")
            </h1>
            <div class="div-title">
                @Html.Editor("CategoryName", new { htmlAttributes = new { @class = "form-control form-title" } })
            </div>
            @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
            <br /><br />

            <button type="submit" class="button" style="background-color:#e15f41;">
                <span style="color:white;">Submit</span>
            </button>
        </form>
    </div>
        </div>

