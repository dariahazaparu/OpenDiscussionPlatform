@model OpenDiscussion.Models.Subject

@*@{
        ViewBag.Title = "New subject";
    }*@

<div style="text-align:center;">
    <div class="container">

        <h1 style="color:#303952;">
            Add your new recipe
        </h1>
        <hr style="border:2px #e15f41 solid;" />
        <form method="post" action="/Subjects/NewSel/">
            <h2 style="color:#303952;">
                @Html.Label("Title", "Title")
            </h2>
            <div class="div-title">
                @Html.TextBox("Title", null, new { @class = "form-control form-title" })
            </div>
            @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
            <br />
            <h2 style="color:#303952;">
                @Html.Label("Content", "Details")
            </h2>
            <div style="text-align:initial;">
                @Html.TextArea("Content", null, new { @class = "form-control form-content summernote" })
            </div>
            @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
            <br />
            <h2 style="color:#303952;">
                @Html.Label("CategoryId", "Select country")
            </h2>
            <div>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                                    "Country", new { @class = "form-control form-title" })
            </div>
            @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
            <br />
            <br />
            <button type="submit" class="button" style="background-color:#e15f41;"><span class="glyphicon glyphicon-plus-sign" style="color:white;">Add</span></button>
        </form>
    </div>
</div>